                    MinimumTrackColor="Red"
                    MaximumTrackColor="LightGray"
                    RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToView, ElementName=ShadowSizeLabel, Property=Width, Constant=20}"
                    RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToView, ElementName=ShadowSizeLabel, Property=Y}"
                    RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=.5, Constant=-20}"
                    RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToView, ElementName=ShadowSizeLabel, Property=Height}"/>
            </RelativeLayout>-->
            <Button
                Text="Place Text"
                Margin="50"
                HorizontalOptions="FillAndExpand"
                Padding="10"/>
        </StackLayout>
    </ScrollView>
</ContentPage>
